<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulBackground"
    tools:context=".AjustesConsultaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:paddingTop="30dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:background="@color/azulTexto"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azulTexto"
            android:textSize="40sp"
            android:fontFamily="@font/quicksandbold"
            android:text="@string/ajustesConsulta"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horario"
        android:textColor="@color/azulTexto"
        android:textSize="@dimen/textomenu"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/quicksandsemibold"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/backhorariosrounded"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lunes"
            android:paddingRight="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="35dp"
            android:textSize="@dimen/textomenu"
            android:textColor="@color/azulTexto"
            android:fontFamily="@font/quicksandsemibold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/de"
                    android:textSize="@dimen/textomenu"
                    android:textColor="@color/azulTexto"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/quicksandsemibold"/>

                <EditText
                    android:id="@+id/etDeManana"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="09:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textomenu"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/quicksandmedium"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/a"
                    android:textSize="@dimen/textomenu"
                    android:textColor="@color/azulTexto"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/quicksandsemibold"/>

                <EditText
                    android:id="@+id/etAManana"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="13:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textomenu"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:fontFamily="@font/quicksandmedium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/de"
                    android:textSize="@dimen/textomenu"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/azulTexto"
                    android:fontFamily="@font/quicksandsemibold"/>

                <EditText
                    android:id="@+id/etDeTarde"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="15:00"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textomenu"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/quicksandmedium"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/a"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/textomenu"
                    android:textColor="@color/azulTexto"
                    android:fontFamily="@font/quicksandsemibold"/>

                <EditText
                    android:id="@+id/etATarde"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"
                    android:fontFamily="@font/quicksandmedium"
                    android:paddingHorizontal="10dp"
                    android:text="18:00"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textomenu"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

