<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="90dp"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/btnCampoMedico"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_campo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicoEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksandbold"
            android:textSize="@dimen/textcampo16"
            android:gravity="center"
            android:textColor="@color/whiteBtn"
            android:text="Cardiologo"/>

        <TextView
            android:id="@+id/medicoNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/quicksandbold"
            android:textSize="@dimen/textcampo16"
            android:textColor="@color/whiteBtn"
            android:text="Emanuel Quiroz Soto"/>

    </LinearLayout>

</LinearLayout>