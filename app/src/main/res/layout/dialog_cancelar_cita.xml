<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fondo_campo"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogCancelarTitulo"
        android:textColor="@color/white"
        android:textSize="@dimen/texttitulo"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDialogMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialogCancelarTexto"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/quicksandregular"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btnConfirmarCancelacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnDialogConfirmar"
            android:background="@drawable/btn_azulclaro_redondeado"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:textSize="18sp"
            android:fontFamily="@font/quicksandbold"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnAtrasCancelacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnDialogAtras"
            android:background="@drawable/btn_amarillo_redondeado"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"
            android:textSize="18sp"
            android:fontFamily="@font/quicksandbold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>