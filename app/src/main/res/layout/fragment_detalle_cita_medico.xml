<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulBackground"
    tools:context=".Fragmentos.DetalleCitaMedicoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/paciente"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvPacienteDetalleCitaMedico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/quicksandmedium"
                    android:hint="Fernando Jose"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22"/>
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/usuario"
                android:padding="10dp"
                android:contentDescription="Foto de perfil"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/Edad"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvEdadDetalleCitaMedico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="29"
                    android:textSize="@dimen/text22"
                    android:textColor="@color/azulTexto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/AÃ±os"
                    android:textSize="@dimen/text22"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/azulTexto"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/laberGenero"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvGeneroDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="Mujere"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelTelefono"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvTelefonoDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="6121212332"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelFecha"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvFechaDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="19/7/2025"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelHora"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvHoraDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="14:00"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelEstado"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvEstadoDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandregular"
                    android:hint="Pendiente"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelMotivo"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tvMotivoDetalleCitaMedico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="Motivo de la consulta"
                    android:fontFamily="@font/quicksandregular"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeccionOpcionesDetallesCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnFinalizarDetallesCitaMedico"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/finalizaCita"
                    android:fontFamily="@font/quicksandbold"
                    android:background="@drawable/btn_azul_redondeado_si"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:paddingVertical="12dp"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnReprogramarDetallesMedico"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reprogramarCita"
                    android:fontFamily="@font/quicksandbold"
                    android:textAllCaps="false"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_amarillo_redondeado"
                    android:paddingVertical="12dp" />

                <Button
                    android:id="@+id/btnCancelarDetallesMedico"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:background="@drawable/btn_rojo_redondear_no"
                    android:text="@string/cancelarCita"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeccionRecteaDetalleCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notas"
                    android:textSize="20sp"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/azulTexto"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvNotasRecetaDetalleCita"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>