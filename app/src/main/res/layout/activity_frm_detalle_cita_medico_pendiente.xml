<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_detalle_cita_medico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frmDetalleCitaMedicoPendienteActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/fondo_barra" />

    <LinearLayout
        android:id="@+id/fixedHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
android:paddingLeft="20dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/menu50"
            android:layout_height="@dimen/menu50"
            android:background="@drawable/menuazul100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/encabezadoDetallesCita"
            android:textColor="@color/azulTexto"
            android:textSize="40sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/paciente"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvPacienteDetalleCitaMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/quicksandmedium"
                android:hint="Fernando Jose"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

    <ImageView
        android:id="@+id/imagenPerfilDetalleCitaMedico"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fotoperfil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/Edad"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvEdadDetalleCitaMedico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/quicksandmedium"
                android:hint="29"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/AÃ±os"
                android:textSize="@dimen/text18"
                android:textColor="@color/azulTexto"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/genero"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvGeneroDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksandmedium"
                android:hint="Mujere"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/telefono"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvTelefonoDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksandmedium"
                android:hint="6121212332"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/labelFecha"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvFechaDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksandmedium"
                android:hint="19/7/2025"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/labelHora"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvHoraDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksandmedium"
                android:hint="14:00"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/estado"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvEstadoDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/quicksandmedium"
                android:hint="Pendiente"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/labelMotivo"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tvMotivoDetalleCitaMedico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:hint="Motivo de la consulta"
                android:fontFamily="@font/quicksandmedium"
                android:textColor="@color/azulTexto"
                android:textSize="@dimen/text18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSeccionOpcionesDetallesCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnFinalizarDetallesCitaMedico"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/finalizaCita"
            android:fontFamily="@font/quicksandbold"
            android:background="@drawable/btn_azul_redondeado_si"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnReprogramarDetallesMedico"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/reprogramarCita"
            android:fontFamily="@font/quicksandbold"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_amarillo_redondeado"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnCancelarDetallesMedico"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:background="@drawable/btn_rojo_redondear_no"
            android:text="@string/cancelarCita"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingVertical="12dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/llSeccionRecteaDetalleCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelReceta"
                android:textSize="20sp"
                android:fontFamily="@font/quicksandbold"
                android:textColor="@color/azulTexto"
                android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/ivRecetaDetallesCitaMedico"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/receta_detalle_cita_medico"
            />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegacion_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/azulBackMensajes"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawel_menu"
        app:headerLayout="@layout/menu"
        />
</androidx.drawerlayout.widget.DrawerLayout>