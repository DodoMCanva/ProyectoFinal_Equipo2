<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="120dp"
    android:padding="4dp">

    <LinearLayout
        android:paddingLeft="6dp"
        android:id="@+id/panelCitaPaciente"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_campo"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/citaFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text22"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="19 de noviembre del 2025"/>
            <TextView
                android:id="@+id/citaHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="00:00"/>
        </LinearLayout>


        <TextView
            android:id="@+id/citaEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text22"
            android:textColor="@color/white"
            android:text="Cardiologo"/>
        <TextView
            android:id="@+id/citaMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text22"
            android:textColor="@color/white"
            android:text="Emmanuel Quiroz Ibarra"
            />

    </LinearLayout>
</LinearLayout>