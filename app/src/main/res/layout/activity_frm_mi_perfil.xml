<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_mi_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frmMiPerfilActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulBackground">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@drawable/fondo_barra" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:paddingBottom="20sp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/menu50"
            android:layout_height="@dimen/menu50"
            android:background="@drawable/menuazul100"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azulTexto"
            android:layout_marginEnd="80dp"
            android:textSize="@dimen/texttitulo45"
            android:fontFamily="@font/quicksandbold"
            android:text="Perfil"
            android:gravity="center"/>
    </LinearLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/usuario"
            android:contentDescription="Foto de perfil"
            app:shapeAppearanceOverlay="@style/CircularImage"
            android:scaleType="centerCrop" />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/perfilNombre"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/azulTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jose Fernando Quinteroz Rojas"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/perfilNumero"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/azulTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="644 158 1235"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/perfilFechaNa"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/azulTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 de enero del 1980"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/perfilGenero"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/azulTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hombre"
        />

    <Button
        android:layout_marginTop="60sp"
        android:id="@+id/btnEditarPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Editar Perfil "
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/btn_azul_redondeado_si"/>

    <Button
        android:layout_marginTop="20sp"
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cerrar Sesion "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_rojo_redondear_no"/>

</LinearLayout>

<com.google.android.material.navigation.NavigationView
android:id="@+id/navegacion_menu"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="@color/azulBackMensajes"
app:itemTextColor="@color/white"
app:menu="@menu/drawel_menu"
app:headerLayout="@layout/menu"
    />
    </androidx.drawerlayout.widget.DrawerLayout>