<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fondo_campo"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvTitleReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialogRecetaTitulo"
            android:textColor="@color/white"
            android:textSize="@dimen/texttitulo"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialogSubirImagen"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/quicksandregular"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etImagePath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/dialogRutaImagen"
                android:padding="12dp"
                android:background="@color/white"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnBuscarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialoBtnBuscar"
                android:background="@drawable/btn_azulclaro_redondeado"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textSize="16sp"
                android:fontFamily="@font/quicksandbold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialogNota"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/quicksandregular"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etNotas"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/dialogTextoNotas"
            android:textColor="@color/black"
            android:padding="12dp"
            android:background="@color/white"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnCompletar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dialogBtnCompletar"
                android:background="@drawable/btn_azulclaro_redondeado"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp"
                android:textSize="18sp"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancelarForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dialogBtnCancel"
                android:background="@drawable/btn_amarillo_redondeado"
                android:textColor="@android:color/white"
                android:paddingVertical="12dp"
                android:textSize="18sp"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>