<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulBackground"
    tools:context=".Fragmentos.DetalleCitaPacienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/labelMedico"
                    android:textSize="@dimen/text22"
                    android:fontFamily="@font/quicksandbold"
                    android:textColor="@color/azulTexto" />

                <TextView
                    android:id="@+id/tvMedicoD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emmanuel Quiroz Soto"
                    android:textSize="@dimen/text22"
                    android:textColor="@color/azulTexto"
                    android:fontFamily="@font/quicksandregular" />

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/usuario"
                android:contentDescription="Foto de perfil"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:scaleType="centerCrop" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"  android:paddingBottom="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelEspecialidad"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />

                <TextView
                    android:id="@+id/tvEspecialidadD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="Cardiólogo"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelFecha"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22" />

                    <TextView
                        android:id="@+id/tvFechaD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="19/07/2025"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelHora"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22" />

                    <TextView
                        android:id="@+id/tvHoraD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="14:00"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelEstado"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22" />

                    <TextView
                        android:id="@+id/tvEstadoD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="Pendiente"
                        android:textColor="@color/azulTexto"
                        android:textSize="@dimen/text22"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelMotivo"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22" />

                <TextView
                    android:id="@+id/tvMotivoD"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp" android:layout_marginBottom="24dp"
                    android:fontFamily="@font/quicksandregular"
                    android:gravity="top|start"
                    android:paddingRight="20dp"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:text="Motivo"
                    android:textColor="@color/azulTexto"
                    android:textSize="@dimen/text22"
                  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeccionRecetaPaciente"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp" android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:visibility="gone"> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksandbold"
                android:text="@string/labelReceta"
                android:textColor="@color/azulTexto"
                android:textSize="20sp" />

                <ImageView
                    android:id="@+id/ivRecetaDetallesCita"
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true" android:scaleType="fitCenter" android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/receta_detalle_cita_medico"
                    android:contentDescription="Imagen de la receta subida por el médico"/>
                    </LinearLayout>

            <Button
                android:id="@+id/btnCancelarCita"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_rojo_redondear_no"
                android:fontFamily="@font/quicksandbold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/btnCancelarCita"
                android:textAllCaps="false"
                android:textColor="@color/whiteBtn"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>