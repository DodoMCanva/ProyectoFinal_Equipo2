<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azulBackground"
    tools:context=".Fragmentos.DetalleCitaPacienteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labelMedico"
                        android:textSize="20sp"
                        android:fontFamily="@font/quicksandbold"
                        android:textColor="@color/azulTexto" />

                    <TextView
                        android:id="@+id/tvMedicoD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emmanuel Quiroz Soto"
                        android:textSize="22sp"
                        android:textColor="@color/azulTexto"
                        android:fontFamily="@font/quicksandregular" />

                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgFotoPerfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/usuario"
                    android:contentDescription="Foto de perfil"
                    app:shapeAppearanceOverlay="@style/CircularImage"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingBottom="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelEspecialidad"
                    android:textColor="@color/azulTexto"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvEspecialidadD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/quicksandregular"
                    android:text="CardiÃ³logo"
                    android:textColor="@color/azulTexto"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelFecha"
                        android:textColor="@color/azulTexto"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvFechaD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="19/07/2025"
                        android:textColor="@color/azulTexto"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelHora"
                        android:textColor="@color/azulTexto"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvHoraD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="14:00"
                        android:textColor="@color/azulTexto"
                        android:textSize="22sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:text="@string/labelEstado"
                        android:textColor="@color/azulTexto"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvEstadoD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/quicksandregular"
                        android:text="Pendiente"
                        android:textColor="@color/azulTexto"
                        android:textSize="22sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelMotivo"
                    android:textColor="@color/azulTexto"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvMotivoD"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/quicksandregular"
                    android:gravity="top|start"
                    android:paddingRight="20dp"
                    android:maxLines="5"
                    android:minLines="3"
                    android:scrollbars="vertical"
                    android:text="Motivo"
                    android:textColor="@color/azulTexto"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/labelReceta"
                    android:textColor="@color/azulTexto"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/ivRecetaDetallesCita"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/receta_detalle_cita_medico" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCancelarCita"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/btn_rojo_redondear_no"
                android:fontFamily="@font/quicksandbold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/btnCancelarCita"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" /> </LinearLayout>
    </ScrollView>

</LinearLayout>