<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">51%</item>

    </style>
    <!--Aqui se cambia el tamanio del texto-->
    <style name="CustomNavigationMenuItemStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@color/azulBackMensajes</item>
        <item name="android:textColor">@color/whiteBtn</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/azulTexto</item>
        <item name="colorPrimary">@color/azulBackMensajes</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/azulTexto</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="NavigationMenuItemTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/quicksandbold</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:textColor">@color/whiteBtn</item>
    </style>



</resources>